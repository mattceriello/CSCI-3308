<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Add a Review</h4>
                <button
                        type="button"
                        class="close"
                        data-dismiss="modal"
                        onclick="openModal()"
                        aria-hidden="true"
                >
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="title">Song Name</label>
                    <input type="text" id="titlebox" name="title" value=<%- artist %>" readonly>
                </div>
                <div class="form-group">
                    <label for="title">Enter your review here:</label>

                </div>
                <div class="form-group">
                    <textarea id="review" name="review" rows="4" cols="35"></textarea>
                </div>
                <div class="form-group">
                    <button
                            id="my_submit_button"
                            class="btn btn-primary btn-block login-btn"
                            disabled>
                        Sign Up
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>