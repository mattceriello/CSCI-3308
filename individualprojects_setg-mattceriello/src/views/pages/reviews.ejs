<%- include('../partials/header'); -%>
<body>
<main>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="reviews">Reviews</a>

        </ul>
        <ul class="ml-auto">
            <li>
                <a class="navbar-brand" href="https://github.com/mattceriello"><i class="fa fa-github"></i></a>
            </li>
        </ul>
    </nav>
    <div class="" style="background-color: #0f415c;">
        <div class="container-fluid" style="padding: 2%; ">
            <form class="" action="/filter_reviews" method="post">
                <div class="row">
                    <div class="col-3">

                    </div>
                    <div class="col-5">
                        <input class="form-control" type="text" name="reviewtitle" placeholder="Enter Song Name">
                    </div>
                    <div class="col-1">
                        <input class="btn btn-light" type="submit" name="filter" value = "Filter"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
<%
  if (items) {
      var table = '';
      var table_row = 0;
      var table = '';
      table += "<div class='col-md-10 mx-auto'>";
      table += "<table class='table table-bordered' id='stats_table'>";
      table += "<tr>";
      table += "<th class='align-bottom'>Song</th>";
      table += "<th class='align-bottom'>Review</th>";
      table += "<th class='align-bottom'>Review Date</th>";
      table += "</tr>";
	<!-- Iterate the items object & update the cards variable -->
  items.forEach(function(item){
    table += "<tr>";
        table += "<td>"+ item.song_name +"</td>";
        table += "<td>"+ item.review +"</td>";
        table += "<td>"+ item.review_date +"</td>";
    table += "</tr>";


  });
  table += '</table>'

%>
    <%- table %>
<% } %>
</main>
